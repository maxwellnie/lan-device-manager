{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lan-windows",
  "version": "0.1.0-beta",
  "identifier": "io.github.maxwellnie.lan.device.windows",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LanDevice Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "center": true,
        "resizable": true,
        "visible": true,
        "shadow": false,
        "backgroundColor": "#00000000",
        "backgroundThrottling": "suspend",
        "additionalBrowserArgs": "--disable-gpu-sandbox --disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
